<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayoutEmp"
    android:layout_width="match_parent"
    android:layout_height="55dip"
    android:background="@drawable/list_view_bg"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="0dip"
    android:paddingLeft="0dip"
    android:paddingRight="0dip" >

    <ImageView
        android:id="@+id/ImageItem"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_centerVertical="true"
         android:layout_marginLeft="5dip"
         android:src="@drawable/item_02"
        />
    
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true" >
        
        <TextView
            android:id="@+id/empItemTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dip"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="TextView02"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/empItemTextTel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="55dip"
            android:gravity="center_vertical|left"
            android:singleLine="true"
            android:text="TextView02"
            android:textColor="@color/gray"
            android:textSize="14sp" 
            android:visibility="gone"/>

    </LinearLayout>

    <ImageButton
        android:id="@+id/item_image_mail"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dip"
        android:background="@drawable/listmail_bg"
        android:focusable="false" 
        android:visibility="gone" 
        android:contentDescription="@null"/>

    <ImageButton
        android:id="@+id/item_image_sms"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dip"
        android:layout_toLeftOf="@+id/item_image_mail"
        android:background="@drawable/listsms_bg"
        android:focusable="false" 
        android:visibility="gone"
        android:contentDescription="@null"/>

    <ImageButton
        android:id="@+id/item_image_tel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="40dip"
        android:background="@drawable/listtel_bg"
        android:focusable="false" 
        android:contentDescription="@null"/>
    
    <ImageButton
        android:id="@+id/item_image_del"
        android:layout_width="60dp"
        android:layout_height="30dp"
        android:visibility="gone"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="12dip"
        android:background="@drawable/delete_btn_red_bg"
        android:contentDescription="@null"/>

</RelativeLayout>