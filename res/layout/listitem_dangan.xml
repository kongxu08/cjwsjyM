<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_contact_item_normal"
    android:padding="8.0dip" >

	<RelativeLayout
     android:id="@+id/rl_finish2"
     android:layout_width="match_parent"
     android:layout_height="50dp"
		android:layout_centerVertical="true"
		android:layout_alignParentLeft="true"
		android:layout_alignParentStart="true">
        <View
            android:id="@+id/iv_tip"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:contentDescription="@null"
            android:background="#00A2E8"
            android:layout_marginTop="20dp"
            android:visibility="visible"/>

    <RelativeLayout
         android:id="@+id/rl_finish"
         android:layout_width="240dp"
         android:layout_height="wrap_content"
         android:layout_toRightOf="@id/iv_icon1"
         android:layout_marginTop="3dp"
         android:paddingRight="30dp">
         <TextView
             android:id="@+id/tv_title"
             android:layout_width="wrap_content"
             android:layout_height="55dp"
             android:layout_marginLeft="18dp"
             android:text="标题"
             android:textSize="19dp"
             android:textColor="#717071"
             android:layout_marginBottom="2dp"
             android:gravity="center_vertical"
             android:maxLines="2"
             android:ellipsize="end"
             android:includeFontPadding="false"/>
     </RelativeLayout>

     <ImageView
         android:id="@+id/iv_icon2"
         android:layout_width="20dp"
         android:layout_height="20dp"
         android:layout_alignParentRight="true"
         android:src="@drawable/pedding_icon1"
         android:layout_centerVertical="true"
         android:contentDescription="@null" />

        <ImageView
            android:id="@+id/button1"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/iv_icon2"
            android:layout_toStartOf="@+id/iv_icon2"
            android:src="@drawable/biaozhun_01"
            android:layout_marginTop="8dp"
            android:layout_marginRight="73dp"
            android:layout_marginEnd="3dp" />

        <ImageView
            android:id="@+id/button2"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_toLeftOf="@+id/iv_icon2"
            android:layout_toStartOf="@+id/iv_icon2"
            android:src="@drawable/biaozhun_02"
            android:layout_marginTop="8dp"
            android:layout_marginRight="13dp"
            android:layout_marginEnd="3dp" />

    </RelativeLayout>

</RelativeLayout>