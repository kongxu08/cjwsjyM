<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:background="#eaf4f8"
    android:orientation="horizontal" >
    
   <LinearLayout 
       android:id="@+id/car_color"
       android:layout_width="0dp"
       android:layout_weight="1.4"
       android:layout_height="fill_parent"
       android:orientation="vertical"
      
       >
       <TextView 
           android:id="@+id/order_no"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           style="@style/white16"
           android:text="2014056345"
           android:layout_gravity="center_horizontal"
           android:layout_marginTop="10dp"
           android:maxEms="8" 
           android:singleLine="true"
           android:ellipsize="end" 
           android:layout_marginLeft="6dp"
           />
        <TextView 
            android:id="@+id/order_car_type"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           style="@style/white18"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="5dp"
            android:layout_marginTop="14dp"
            android:text="yueye"
           />
   </LinearLayout>
   
     <LinearLayout 
       android:layout_width="0dp"
       android:layout_weight="3"
       android:layout_height="fill_parent"
       android:orientation="vertical"
       android:layout_marginLeft="6dp"
       android:gravity="center_vertical"
       >
         <LinearLayout 
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_marginTop="10dp"
         android:gravity="center_vertical"
        >
             <TextView 
                 android:id="@+id/order_time"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 style="@style/black16"
                 android:text="2014-5-17"
                 />
            
              <ImageView 
                  android:id="@+id/img"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_marginLeft="15dp"
                  />
       
              <TextView 
                  android:id="@+id/order_address"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 style="@style/black16"
                 android:maxEms="4" 
                android:singleLine="true"
                android:ellipsize="end" 
              
                 android:layout_marginRight="10dp"
                 android:text="天河机场"
                 />
         </LinearLayout> 
         
             <ImageView 
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:src="@drawable/icon_jiantou"
                  android:layout_gravity="right|center_vertical"
                  android:layout_marginRight="10dp"
                  />
             
           <LinearLayout 
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"
       android:gravity="center_vertical"
       android:layout_marginBottom="5dp"
        >
                 <TextView 
                   android:id="@+id/icon_car"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                    style="@style/gray14"
                    android:text="派车车号: "
                  />
              <TextView 
                  android:id="@+id/order_car_no"
                 android:layout_width="0dp"
                 android:layout_weight="0.5"
                 android:layout_height="wrap_content"
                 style="@style/gray14"
                 android:maxEms="5" 
                android:singleLine="true"
                android:ellipsize="end" 
                 />
                <TextView 
                       android:id="@+id/icon_smile"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                   style="@style/gray14"
                   android:text="司机:"
                  />
               <TextView 
                   android:id="@+id/order_person_name"
                android:layout_width="0dp"
                 android:layout_weight="0.4"
                 android:layout_height="wrap_content"
                 style="@style/gray14"
                  android:layout_marginLeft="5dp"
                 />
           </LinearLayout>
           
           
     </LinearLayout>
     
     
         
   
</LinearLayout>
