<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#EFEFEF"
    android:padding="3.0dip" >

       <RelativeLayout
	    android:id="@+id/rl_finish2"
	    android:layout_width="200dp"
	    android:layout_height="30dp"
		android:layout_marginTop="2dp"
	    android:background="#EFEFEF">

           <TextView
	                android:id="@+id/et_text1"
	                android:layout_width="180dp"
	                android:layout_height="26dp"
	                android:background="@drawable/edit_text1"
	                android:hint="出差审批待办"
	                android:gravity="center_vertical"
	                android:layout_gravity="center"
	                android:paddingLeft="15dp"
	                android:textColorHint="#717071"
	                android:textSize="14dp"/>
			     
			     <TextView
	                 android:id="@+id/tv_count1"
	                 android:layout_width="30dp"
	                 android:layout_height="26dp"
	                 android:layout_alignRight="@id/et_text1"
					 android:layout_marginRight="20dp"
					 android:layout_gravity="center_horizontal"
	                 android:text="0"
	                 android:textColor="#E60012"
					 android:gravity="center"
	                 android:textSize="12dp"/>
			     
			     <TextView
	                android:id="@+id/tv_tev1"
	                android:layout_width="10dp"
	                android:layout_height="12dp"
	                android:layout_alignRight="@id/et_text1"
					android:layout_marginRight="8dp"
					android:layout_centerVertical="true"
	                android:background="@drawable/index_09"
	                android:textColor="#353535"
	                android:textSize="10dp" />

	</RelativeLayout>
</RelativeLayout>