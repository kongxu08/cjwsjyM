<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" 
    android:background="#FFFFFF">

   <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" 
        android:background="@null">
        
       <RelativeLayout
            android:id="@+id/rl_form"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#F7F7F7">
	       <RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/edit_text3"
		        android:layout_gravity="center"
		        android:layout_centerInParent="true"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="10dp"
				android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"
		        android:paddingBottom="5dp">
	    	
		        <EditText
		            android:id="@+id/et_message"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:background="@drawable/edit_text4"
		            android:hint=""
		            android:textSize="14sp"
		            android:textColor="#000000"
		            android:lines="4"
		            android:gravity="top"
		         	android:layout_marginLeft="10dp"
		         	android:layout_marginRight="10dp"/>
				
		        <View  
		           android:id="@+id/v_view1"
		           android:layout_height="1px" 
		           android:layout_width="wrap_content"
		           android:background="#C9C9CA"
				   android:layout_gravity="center"
				   android:layout_below="@+id/et_message"
				   android:layout_marginLeft="10dp"
				   android:layout_marginRight="10dp"
				   android:layout_marginBottom="8dp"
				   android:paddingTop="4dp"/>
		        
		        <ImageView
		           android:id="@+id/iv_sign"
		           android:layout_width="93dp"
		           android:layout_height="26dp"
		           android:layout_below="@+id/v_view1"
		           android:layout_alignParentRight="true"
		           android:layout_marginRight="10dp"
		           android:src="@drawable/pedding_index07"
		           android:contentDescription="@null" />
			 </RelativeLayout>
    	</RelativeLayout>
    	
       
       <RelativeLayout
            android:id="@+id/rl_form1"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:background="#F7F7F7"
	        android:visibility="gone">
	        <RelativeLayout
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:background="@drawable/edit_text3"
		        android:layout_gravity="center"
		        android:layout_centerInParent="true"
		        android:layout_marginTop="10dp"
		        android:layout_marginBottom="10dp"
				android:layout_marginLeft="20dp"
		        android:layout_marginRight="20dp"
		        android:paddingBottom="8dp"
		        android:paddingTop="4dp">
	    	
		        <EditText
		            android:id="@+id/et_updatemessage"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:background="@drawable/edit_text4"
		            android:hint=""
		            android:textSize="14sp"
		            android:textColor="#000000"
		            android:lines="4"
		         	android:gravity="top"
		         	android:layout_marginLeft="10dp"
		        	android:layout_marginRight="10dp"
		        	android:inputType="none"
					android:textIsSelectable="true"/>
				
		        <View  
		           android:id="@+id/v_view2"
		           android:layout_height="1px" 
		           android:layout_width="wrap_content"
		           android:background="#C9C9CA"
				   android:layout_gravity="center"
				   android:layout_below="@+id/et_updatemessage"
				   android:layout_marginLeft="10dp"
				   android:layout_marginRight="10dp"
				   android:layout_marginBottom="6dp"/>
		        
		        <ImageView
		           android:id="@+id/tv_username"
		           android:layout_width="wrap_content"
		           android:layout_height="wrap_content"
		           android:layout_below="@id/v_view2"
			       android:layout_centerVertical="true"
			       android:layout_marginLeft="10dp"
			       android:layout_marginBottom="5dp"
			       android:contentDescription="@null"/>

		        <TextView
			        android:id="@+id/tv_signDate"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:layout_centerVertical="true"
			        android:text=""
			        android:textSize="14sp"
			        android:textColor="#000000"
			        android:layout_below="@id/v_view2"
			        android:layout_toRightOf="@+id/tv_username"
			        android:layout_marginLeft="5dp"
		            android:layout_marginBottom="5dp"/>

		        <ImageView
		           android:id="@+id/iv_submit"
		           android:layout_width="45dp"
		           android:layout_height="26dp"
		           android:layout_below="@id/v_view2"
		           android:layout_alignParentRight="true"
		           android:layout_marginRight="10dp"
		           android:src="@drawable/pedding_index05" 
		           android:contentDescription="@null"/>
		        
		        <ImageView
		           android:id="@+id/iv_update"
		           android:layout_width="45dp"
		           android:layout_height="26dp"
		           android:layout_below="@id/v_view2"
		           android:layout_toLeftOf="@+id/iv_submit"
		           android:layout_marginRight="10dp"
		           android:src="@drawable/pedding_index06" 
		           android:contentDescription="@null"/>
			   </RelativeLayout>
    	</RelativeLayout>
       
       <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_gravity="center"
	        android:layout_marginLeft="20dp"
	        android:layout_marginRight="20dp"
	        android:layout_marginTop="8dp">
        <ListView
	        android:id="@+id/leadershiplist"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:background="#FFFFFF"
	       	android:divider="#00000000"
			android:dividerHeight="10dp"
	        android:scrollbars="none"
	        android:scrollingCache="true"
	        android:layout_marginTop="5dp" />
       </RelativeLayout> 
    </LinearLayout>

</RelativeLayout>