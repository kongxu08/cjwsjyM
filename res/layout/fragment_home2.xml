<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >
	    <RelativeLayout
	        android:id="@+id/rl_image"
            android:layout_width="match_parent"
            android:layout_height="120dp">

			<ImageView
                android:id="@+id/iv_image"
                android:layout_width="fill_parent"
                android:layout_height="120dp"
                android:background="@drawable/index_01"
				android:layout_alignParentTop="true"
				android:layout_alignParentLeft="true"
				android:layout_alignParentStart="true" />
		</RelativeLayout>
   </LinearLayout> 
    
   <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >  
	    <RelativeLayout
	        android:id="@+id/rl_layout"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#EFEFEF" >
		  <LinearLayout
		      	android:id="@+id/ll_layout"
		        android:layout_width="110dp"
		        android:layout_height="match_parent"
		        android:orientation="vertical" 
		        android:layout_marginLeft="10dp">
		     <ImageView
                android:id="@+id/iv_image2"
                android:layout_width="50dp"
                android:layout_height="50dp"        
                android:src="@drawable/image_01" 
                android:layout_gravity="center"
                android:layout_marginTop="10dp" />

			  <TextView
				  android:id="@+id/tv_text1"
				  android:layout_width="90dp"
				  android:layout_height="18dp"
				  android:layout_centerVertical="true"
				  android:text="我的待办"
				  android:layout_marginTop="1dp"
				  android:textColor="#5C5C5C"
				  android:textSize="14dp"
				  android:layout_gravity="center"
				  android:gravity="center"/>

		 	 <TextView
		 	    android:id="@+id/tv_text3"
                android:layout_width="90dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:text="点击刷新"
                android:layout_marginTop="1dp"
                android:textColor="#5C5C5C"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:gravity="center"/>
		 	 
		 	 <TextView
		 	    android:id="@+id/tv_text2"
                android:layout_width="90dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:text="共0条待办"
                android:textColor="#ED1C24"
                android:textSize="14dp"
                android:layout_gravity="center"
                android:gravity="center"/>
		 	 
		  </LinearLayout>
		
		 <RelativeLayout
		    android:id="@+id/rl_layout1"
            android:layout_width="10dp"
            android:layout_height="match_parent"
            android:background="@drawable/index_03"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="8dp"
            android:layout_toRightOf="@+id/ll_layout" />

		 <LinearLayout
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:orientation="vertical" 
		        android:background="#EFEFEF"
		        android:layout_gravity="center"
		        android:layout_toRightOf="@+id/rl_layout1" >
		 	 <ListView
		 	     android:id="@+id/listviewd2"
		 	     android:layout_width="fill_parent"
	             android:layout_height="fill_parent"
	             android:layout_marginTop="5dp"
	             android:background="#EFEFEF"
	             android:divider="#EFEFEF"
        		 android:dividerHeight="1px"/> 
		 	</LinearLayout>
        </RelativeLayout>
        
	 </LinearLayout>
	    
     <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >  
	    <RelativeLayout
	       android:id="@+id/ll_lyCenter"
	       android:layout_width="match_parent"
	       android:layout_height="match_parent"
	       android:gravity="center"
	       android:background="#EFEFEF">
	      <ImageView
	            android:id="@+id/iv_image4"
	            android:layout_width="12dp"
	            android:layout_height="12dp"
	            android:src="@drawable/index_02"
	            android:contentDescription="@null" />
	    </RelativeLayout>
	    
	   <RelativeLayout
	       android:layout_width="match_parent"
	       android:layout_height="match_parent">
	    <android.support.v4.view.ViewPager
	        android:id="@+id/viewpager"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content"
	        android:layout_centerInParent="true" />

	    <LinearLayout  
	        android:id="@+id/viewGroup"  
	        android:layout_width="fill_parent"  
	        android:layout_height="wrap_content"  
	        android:layout_alignParentBottom="true"  
	        android:layout_marginBottom="60dp"  
	        android:gravity="center_horizontal"  
	        android:orientation="horizontal" >  
    	</LinearLayout>  	
	   </RelativeLayout> 
	    
	</LinearLayout>
</LinearLayout>