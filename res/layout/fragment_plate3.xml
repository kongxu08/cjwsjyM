<?xml version="1.0" encoding="utf-8"?><LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >
     <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="#EFEFEF">
	       <ImageView
	            android:id="@+id/iv_outoffoffice"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_alignParentLeft="true"
	            android:layout_centerVertical="true"
	            android:src="@drawable/plate_1"
	            android:layout_marginLeft="20dp" />
	       <TextView
	            android:id="@+id/titleXX"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/iv_outoffoffice"
	            android:layout_centerVertical="true"
	            android:text=""
	            android:textColor="#717071"
	            android:textSize="16sp" 
	            android:layout_marginLeft="5dp"/>
      </RelativeLayout>
      
		<GridView
          android:id="@+id/listview_item_gridview"
          android:layout_width="match_parent"
          android:layout_height="130dp"
          android:background="#ffffff"
          android:gravity="center"
          android:horizontalSpacing="0dp"
          android:listSelector="@null"
          android:numColumns="3"
          android:stretchMode="columnWidth"
          android:verticalSpacing="1.0dp"
          android:scrollbars="none" />
    
</LinearLayout>
