<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8.0dip" >
<RelativeLayout
        android:id="@+id/rlTest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
   <RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"> 
    <LinearLayout
        android:id="@+id/ll_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5.0dip"
        android:layout_marginRight="3dp"
        android:layout_marginLeft="5.0dip"
        android:orientation="horizontal" >

		<ImageView
            android:id="@+id/iv_tip"
            android:layout_width="10dp"
            android:layout_height="10dp"
            android:contentDescription="@null"
            android:background="#00A2E8"
            android:layout_marginTop="5dp" 
            android:visibility="visible" 
            />
			
			<TextView
            android:id="@+id/tv_title"
            android:text="TLS 1.3.11 发布！"
            style="@style/list_text_title"
            android:layout_toRightOf="@id/iv_tip"
            android:maxLines="2"
            android:ellipsize="end"
            android:singleLine="false"
            android:layout_marginLeft="4dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_source"
        style="@style/list_text_info"
        android:text="国际工程合作部"
        android:layout_below="@id/ll_title"
        android:layout_marginTop="5dp" 
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/news_depart"
        />

    <TextView
        android:id="@+id/tv_time"
        style="@style/list_text_info"
        android:text="2015-06-14"
        android:layout_below="@id/tv_source"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:drawableLeft="@drawable/news_date"
        android:drawablePadding="4.0dip" 
        />
	</RelativeLayout>
    
    <ImageView
        android:id="@+id/iv_link"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="2dip"
        android:contentDescription="@null"
        android:src="@drawable/arrow"
        android:layout_centerVertical="true" />
    
</RelativeLayout>

  <View  
   android:layout_below="@+id/rlTest"
   android:layout_height="2px" 
   android:layout_width="wrap_content"
   android:background="#D6D6D6"
   android:layout_gravity="center"
   android:layout_marginTop="18dp"
   android:layout_marginBottom="0dp"/>
</RelativeLayout>